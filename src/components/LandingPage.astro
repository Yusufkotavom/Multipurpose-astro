---
export interface Props {
  business: {
    id: string;
    name: string;
    tagline: string;
    description: string;
    hero: {
      title: string;
      subtitle: string;
      cta: string;
      image: string;
    };
    colors: {
      primary: string;
      secondary: string;
      accent: string;
    };
    services: Array<{
      name: string;
      description: string;
      price: string;
      icon: string;
    }>;
    whyUs: string[];
    testimonials: Array<{
      name: string;
      role: string;
      content: string;
      rating: number;
    }>;
    contact: {
      phone: string;
      whatsapp: string;
      address: string;
      hours: string;
    };
    faq: Array<{
      question: string;
      answer: string;
    }>;
  };
}

const { business } = Astro.props;
---

<!-- Hero Section -->
<section class="bg-gradient-to-br from-gray-50 to-gray-100 py-20">
  <div class="container-custom">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6">
          {business.hero.title}
        </h1>
        <p class="text-xl text-gray-600 mb-8">
          {business.hero.subtitle}
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="#contact" class="btn-primary text-lg px-8 py-3" style={`background-color: ${business.colors.primary}`}>
            {business.hero.cta}
          </a>
          <a href="#services" class="btn-secondary text-lg px-8 py-3">
            Lihat Layanan
          </a>
        </div>
      </div>
      
      <!-- Image -->
      <div class="relative">
        <div class="bg-white rounded-2xl shadow-2xl p-8 transform rotate-3 hover:rotate-0 transition-transform duration-300">
          <div class="rounded-xl p-6 text-white mb-6" style={`background: linear-gradient(135deg, ${business.colors.primary}, ${business.colors.secondary})`}>
            <h3 class="text-2xl font-bold mb-4">{business.name}</h3>
            <p class="opacity-90">{business.tagline}</p>
          </div>
          <div class="space-y-4">
            <div class="flex items-center space-x-3">
              <div class="w-3 h-3 rounded-full" style={`background-color: ${business.colors.primary}`}></div>
              <span class="text-gray-700">Layanan Profesional</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-3 h-3 rounded-full" style={`background-color: ${business.colors.secondary}`}></div>
              <span class="text-gray-700">Harga Terjangkau</span>
            </div>
            <div class="flex items-center space-x-3">
              <div class="w-3 h-3 rounded-full" style={`background-color: ${business.colors.primary}`}></div>
              <span class="text-gray-700">Kualitas Terjamin</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Services Section -->
<section id="services" class="py-20 bg-white">
  <div class="container-custom">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Layanan Kami
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        {business.description}
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {business.services.map((service) => (
        <div class="bg-gray-50 rounded-xl p-8 hover:shadow-lg transition-shadow duration-300">
          <div class="text-4xl mb-4">{service.icon}</div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">
            {service.name}
          </h3>
          <p class="text-gray-600 mb-4">
            {service.description}
          </p>
          <div class="text-2xl font-bold" style={`color: ${business.colors.primary}`}>
            {service.price}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Why Us Section -->
<section class="py-20" style={`background-color: ${business.colors.accent}`}>
  <div class="container-custom">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Mengapa Memilih Kami?
      </h2>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {business.whyUs.map((reason, index) => (
        <div class="bg-white rounded-xl p-8 shadow-lg">
          <div class="w-12 h-12 rounded-full flex items-center justify-center mb-4" style={`background-color: ${business.colors.primary}`}>
            <span class="text-white font-bold">{index + 1}</span>
          </div>
          <p class="text-gray-700">{reason}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Testimonials Section -->
<section class="py-20 bg-white">
  <div class="container-custom">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Apa Kata Klien Kami
      </h2>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {business.testimonials.map((testimonial) => (
        <div class="bg-gray-50 rounded-xl p-8 hover:shadow-lg transition-shadow duration-300">
          <!-- Rating -->
          <div class="flex mb-4">
            {Array.from({ length: testimonial.rating }).map(() => (
              <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            ))}
          </div>
          
          <!-- Content -->
          <p class="text-gray-700 mb-6 italic">
            "{testimonial.content}"
          </p>
          
          <!-- Author -->
          <div>
            <div class="font-semibold text-gray-900">{testimonial.name}</div>
            <div class="text-sm text-gray-600">{testimonial.role}</div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- FAQ Section -->
<section class="py-20" style={`background-color: ${business.colors.accent}`}>
  <div class="container-custom">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Pertanyaan Umum
      </h2>
    </div>
    
    <div class="max-w-4xl mx-auto space-y-6">
      {business.faq.map((faq) => (
        <div class="bg-white rounded-lg p-6 shadow-lg">
          <h3 class="text-lg font-semibold text-gray-900 mb-2">{faq.question}</h3>
          <p class="text-gray-600">{faq.answer}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Contact Section -->
<section id="contact" class="py-20 bg-white">
  <div class="container-custom">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Hubungi Kami
      </h2>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Phone -->
      <div class="text-center">
        <div class="w-16 h-16 rounded-full mx-auto mb-4 flex items-center justify-center" style={`background-color: ${business.colors.primary}`}>
          <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Telepon</h3>
        <p class="text-gray-600">{business.contact.phone}</p>
      </div>
      
      <!-- WhatsApp -->
      <div class="text-center">
        <div class="w-16 h-16 rounded-full mx-auto mb-4 flex items-center justify-center bg-green-500">
          <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">WhatsApp</h3>
        <p class="text-gray-600">{business.contact.whatsapp}</p>
      </div>
      
      <!-- Address -->
      <div class="text-center">
        <div class="w-16 h-16 rounded-full mx-auto mb-4 flex items-center justify-center" style={`background-color: ${business.colors.primary}`}>
          <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Alamat</h3>
        <p class="text-gray-600">{business.contact.address}</p>
      </div>
      
      <!-- Hours -->
      <div class="text-center">
        <div class="w-16 h-16 rounded-full mx-auto mb-4 flex items-center justify-center" style={`background-color: ${business.colors.primary}`}>
          <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Jam Buka</h3>
        <p class="text-gray-600">{business.contact.hours}</p>
      </div>
    </div>
  </div>
</section>