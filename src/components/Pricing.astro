---
const plans = [
  {
    name: "Starter",
    price: "Rp 1.500.000",
    period: "/bulan",
    description: "Untuk bisnis kecil yang baru memulai",
    features: [
      "Website responsive",
      "5 halaman",
      "SEO dasar",
      "Email support",
      "SSL certificate",
      "Backup otomatis"
    ],
    popular: false,
    cta: "Pilih Paket"
  },
  {
    name: "Professional",
    price: "Rp 3.500.000",
    period: "/bulan",
    description: "Untuk bisnis menengah yang sedang berkembang",
    features: [
      "Semua fitur Starter",
      "10 halaman",
      "Blog terintegrasi",
      "Contact form",
      "Google Analytics",
      "Priority support",
      "Custom domain",
      "Social media integration"
    ],
    popular: true,
    cta: "Pilih Paket"
  },
  {
    name: "Enterprise",
    price: "Rp 7.500.000",
    period: "/bulan",
    description: "Untuk bisnis besar dengan kebutuhan kompleks",
    features: [
      "Semua fitur Professional",
      "Halaman unlimited",
      "E-commerce integration",
      "Custom development",
      "24/7 support",
      "Performance monitoring",
      "Advanced SEO",
      "API integration"
    ],
    popular: false,
    cta: "Hubungi Kami"
  }
];
---

<section class="py-20 bg-gray-50">
  <div class="container-custom">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Pilihan Paket
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Pilih paket yang sesuai dengan kebutuhan bisnis Anda
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {plans.map((plan) => (
        <div class={`bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300 ${
          plan.popular ? 'ring-2 ring-primary-500 relative' : ''
        }`}>
          {plan.popular && (
            <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
              <span class="bg-primary-500 text-white px-4 py-2 rounded-full text-sm font-semibold">
                Terpopuler
              </span>
            </div>
          )}
          
          <div class="text-center mb-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-2">{plan.name}</h3>
            <div class="text-4xl font-bold text-primary-600 mb-1">{plan.price}</div>
            <div class="text-gray-500 mb-4">{plan.period}</div>
            <p class="text-gray-600">{plan.description}</p>
          </div>
          
          <ul class="space-y-4 mb-8">
            {plan.features.map((feature) => (
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-700">{feature}</span>
              </li>
            ))}
          </ul>
          
          <a 
            href={plan.name === "Enterprise" ? "/contact" : "/pricing"}
            class={`w-full text-center py-3 px-6 rounded-lg font-semibold transition-colors duration-200 ${
              plan.popular 
                ? 'bg-primary-600 hover:bg-primary-700 text-white' 
                : 'bg-gray-100 hover:bg-gray-200 text-gray-900'
            }`}
          >
            {plan.cta}
          </a>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <p class="text-gray-600 mb-4">Butuh paket khusus? Hubungi kami untuk konsultasi</p>
      <a href="/contact" class="btn-primary">
        Konsultasi Gratis
      </a>
    </div>
  </div>
</section>